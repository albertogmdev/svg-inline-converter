<div class="file-input">
	<p>Introduce your svg file</p>
    <input type="file" name="svginput" id="svginput">
</div>

<script>
	const fileInput = document.querySelector('.file-input')

	fileInput.addEventListener("dragenter", function( event ) {
		event.preventDefault()
		event.stopPropagation()

		event.dataTransfer.dropEffect = 'copy';
		console.log(event.dataTransfer.items[0].type);
	}, false);
	fileInput.addEventListener("dragleave", function( event ) {
		event.preventDefault()
		event.stopPropagation()
		console.log('leave')
	}, false);
	fileInput.addEventListener("drop", function( event ) {
		event.preventDefault()
		event.stopPropagation()
		
		let dt = event.dataTransfer
		let files = dt.files
		console.log(dt)
		console.log(files)

		var reader = new FileReader();
		reader.readAsDataURL(files[0]);
		reader.onload = function () {
			console.log(reader)
			console.log(reader.result);
		};
		reader.onerror = function (error) {
			console.log('Error: ', error);
		};

	}, false);
</script>